<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include('./partials/head.ejs')%>
</head>
<body>
	<!-- Header -->
	
	<!-- /Header -->
	<header class="main-header">
		<%- include('./partials/header.ejs') %>
	</header>
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= producto.nombre %></h2> 
			<p class="product-detail-description">
				<a href="/product/product">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%= producto.foto %>" alt="" class="product-detail-img">
					<p class="product-detail-description"><%= producto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for( let index = 0; index < comentarios.length; index++ ) { %>
							<article>
								<img src= "<%= comentarios[index].imagen %>" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users/profile"><%= comentarios[index].nombre_de_usuario %> </a> </strong>
										<%= comentarios[index].comentario %>
									</p>
								</div>
							</article>
						<% } %>
						
					

					</section>
					<form class="form" action="/users/profile" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer.ejs') %>
	</footer>
	<!-- /footer -->

</body>	
</html>