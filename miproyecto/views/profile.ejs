<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<%- include('./partials/head.ejs')%>
</head>
<body>
	<!-- Header -->
	<header class="main-header">
		<%- include('./partials/header-logueado.ejs', {user: usuario})%>
	</header>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= foto %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario %>
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= mail %></li>
						<li>10 productos</li>
						<li>2000 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let index = 0; index < lsProd.length; index++) {%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/product">
							<figure class="product-box_image">
								<img src='<%=lsProd[index].foto%>' alt='' height="250px" width="330px">
							</figure>
							<article class="product-box_data">
								<h2><%- lsProd[index].nombre %></h2>
								<p><%- lsProd[index].descripcion%></p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% }%>
			
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer.ejs') %>
	</footer>
	<!-- /footer -->
</body>	
</html>