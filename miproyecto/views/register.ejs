<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<%- include('./partials/head.ejs')%>
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<%- include('./partials/header.ejs') %>
	</header>
	<!-- /Header -->

	<!-- Novedades -->
	
	<section class="form-login">
		<form action="/users/register" method="post">
		<h4>Registrate <i class="fa-solid fa-address-card"></i></h4>
		<input class="casilla-login" type="email" name="email" id="email" placeholder="Email" required>
		<input class="casilla-login" type="text" name="usuario" id="usuario" placeholder="Usuario" required>
		<input class="casilla-login" type="password" name="contrasena" id="contrasena" placeholder="ContraseÃ±a" required>
		<input class="casilla-login" type="date" name="nacimiento" id="nacimiento" placeholder="Fecha de Nacimiento" required>
		<input class="casilla-login" type="number" name="documento" id="documento" placeholder="Documento" required>
		<input class="casilla-login" type="text" name="fotoPerfil" id="fotoPerfil" placeholder="Foto de Perfil" required>
		<input class="botons" type="submit" name="submit" id="login" placeholder="login">
		</form>
	</section>
	<% if (locals.errors) { %>
		<p><%= errors.message %></p>
	<% } %>
	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer.ejs') %>
	</footer>
	<!-- /footer -->
</body>

</html>